@model IEnumerable<MediaNews.Models.Article>

@{
    ViewBag.Title = "Новини - MediaNews";
    ViewBag.Copy = "Всички права запазени MediaNews";
}

<h2>Новини</h2>

@if (Request.IsAuthenticated)
{
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
}

@* Нов вид на новините *@

<div class="container">
    <div class="row">
@foreach (var item in Model)
{
        <div class="col-sm-4">
            <div class="news">
                <div class="img-figure">
                    @*<div class="cat">категория</div>*@
                    @{
                        var base64 = Convert.ToBase64String(item.imagePath);
                        var imgSrc = String.Format("data:image/gif;base64,{0}", base64);
                    }
                    <img src="@imgSrc" class="img-responsive" />
                </div>
                <div class="title">
                    <h1>@Html.DisplayFor(modelItem => item.Title)</h1>
                </div>
                <p class="description">
                    @Html.DisplayFor(modelItem => item.Description)
                </p>
                <p class="more">
                    @Html.ActionLink("Виж повече", "Details", new { id = item.ID })
                </p>
            </div>
        </div>
}
    </div>
</div>