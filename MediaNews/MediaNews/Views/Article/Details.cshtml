@model MediaNews.Models.Article

@{
    ViewBag.Title = "Details";
}

<section class="banner-section">
    @{
        var base64 = Convert.ToBase64String(Model.imagePath);
        var imgSrc = String.Format("data:image/gif;base64,{0}", base64);
    }
    <img src="@imgSrc" class="banner-section" />
</section>
<section class="post-content-section">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 post-title-block">

                <h1 class="text-center">@Html.DisplayFor(model => model.Title)</h1>
                <ul class="list-inline text-center">
                    <li>Категория | @Html.DisplayFor(model => model.CategoryModelsID)</li>
                    <li>Дата | @Html.DisplayFor(model => model.DateCreated)</li>
                </ul>
            </div>
            <div class="col-lg-9 col-md-9 col-sm-12">
                @Html.DisplayFor(model => model.Content)
            </div>
            @if (Request.IsAuthenticated)
            {
                <div class="col-lg-3  col-md-3 col-sm-12">
                    <div class="well">
                        <h2>Оправление</h2>
                        @Html.ActionLink("Edit", "Edit", new { id = Model.ID }) |
                        @Html.ActionLink("Delete", "Delete", new { id = Model.ID })
                    </div>
                </div>
            }

        </div>

    </div>
</section>