@model IEnumerable<MediaNews.Entities.Models.Posts>

@{
    ViewBag.Title = "Новини";
}

<div class="info-section">
    <span class="glyphicon glyphicon-time"> Дата:<strong>@DateTime.Now.ToString("dd-MMM-yyyy")</strong></span>

    <div class="pull-right">
        <p>Категория:</p>

    </div>
</div>


 <h2>Новини</h2>
<div class="container">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-sm-4">
                <div class="news">
                    <div class="img-figure">
                        <div class="cat" style="background:@item.Category.catColor">@Html.DisplayFor(modelItem => item.Category.Name)</div>
                        @*@{
                            var base64 = Convert.ToBase64String(item.imagePath);
                            var imgSrc = String.Format("data:image/gif;base64,{0}", base64);
                        }*@
                        <img src="@item.ImgUrl" class="img-responsive" />
                    </div>
                    <div class="title">
                        <h1>@Html.DisplayFor(modelItem => item.Title)</h1>
                    </div>
                    <p class="description">
                        @Html.DisplayFor(modelItem => item.Description)
                    </p>
                    <p class="more">
                        @Html.ActionLink("Виж повече", "Details", new { id = item.Id })
                    </p>
                </div>
            </div>
        }
    </div>
</div>
